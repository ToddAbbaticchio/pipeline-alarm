{
    "name": "pipeline-alarm",
    "displayName": "PipelineAlarm",
    "description": "Monitor GitLab pipelines and sound an alarm when they complete",
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": ["Other"],
    "activationEvents": ["*"],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "pipelineAlarm.startMonitoring",
                "title": "Start Pipeline Monitoring",
                "category": "PipelineAlarm"
            },
            {
                "command": "pipelineAlarm.cancelMonitoring",
                "title": "Cancel Pipeline Monitoring",
                "category": "PipelineAlarm"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "pipelineAlarm.startMonitoring",
                    "when": "!pipelineAlarm.isMonitoring"
                },
                {
                    "command": "pipelineAlarm.cancelMonitoring",
                    "when": "pipelineAlarm.isMonitoring"
                }
            ]
        }
    },
    "extensionDependencies": [
        "ms-python.python"
    ],
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/vscode": "^1.74.0",
        "@types/node": "16.x",
        "typescript": "^4.9.4"
    }
}